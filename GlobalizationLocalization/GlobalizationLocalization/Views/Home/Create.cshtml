@using MyResources

@model GlobalizationLocalization.Models.Demo

@{
    ViewBag.Title = "Create";
}

<h2>@MyResources.Resources.DisplayString</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @for = "Name" })
        @Html.TextBoxFor(model => model.Name, new { name = "Name", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Age, new { @for = "Age" })
        @Html.TextBoxFor(model => model.Age, new { name = "Age", @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Age)
    </div>

    <div>
        <input type="submit" value="@Resources.Submit" class="btn btn-primary"/>
        <a class="btn btn-default" href="@Url.Action("Index")">@Resources.BackToList</a>
    </div>
}